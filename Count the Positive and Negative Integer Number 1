import java.util.Scanner;
public class PositiveNegativeCounter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        int positive = 0;
        int negative = 0;
        for (int i = 0; i < n; i++) {
            int num = scanner.nextInt();
            if (num > 0) {
                positive++;
            } else if (num < 0) {
                negative++;
            }
        }
        System.out.printf("Count of Positive Integer is %.2f\n", (float)positive);
        System.out.printf("Count of Negative Integer is %.2f\n", (float)negative);
    }
}
